# Database Connection Strings
# Supabase PostgreSQL Database
# Get these from: https://app.supabase.com/project/_/settings/database

# Pooled connection (IPv4 compatible - for Prisma migrations)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-1-[REGION].pooler.supabase.com:5432/postgres"

# Direct connection (for direct queries)
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Supabase Storage Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Email Configuration (Resend)
# Get your API key from: https://resend.com/api-keys
# Sign up at: https://resend.com
RESEND_API_KEY="re_your_api_key_here"

# Sender email address (must be verified in Resend)
# For development, you can use "onboarding@resend.dev"
# For production, use your verified domain
EMAIL_FROM="Checklist App <onboarding@yourdomain.com>"

# Application URL (for email links and callbacks)
# Development: http://localhost:3000
# Production: https://your-domain.vercel.app
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Analytics Configuration (Optional)
# Enable/disable analytics tracking
NEXT_PUBLIC_ANALYTICS_ENABLED="false"

# Google Analytics (Optional)
# Get your measurement ID from: https://analytics.google.com
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Plausible Analytics (Optional)
# Your domain registered with Plausible
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=""
